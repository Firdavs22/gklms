APP_NAME="GloboKids LMS"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost:8000

APP_LOCALE=ru
APP_FALLBACK_LOCALE=ru
APP_FAKER_LOCALE=ru_RU

APP_MAINTENANCE_DRIVER=file

BCRYPT_ROUNDS=12

LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# Database - SQLite for development, MySQL for production
DB_CONNECTION=sqlite
# DB_CONNECTION=mysql
# DB_HOST=127.0.0.1
# DB_PORT=3306
# DB_DATABASE=globokids_lms
# DB_USERNAME=root
# DB_PASSWORD=

# Session & Cache - database for development, redis for production
SESSION_DRIVER=database
SESSION_LIFETIME=10080
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local
QUEUE_CONNECTION=database

CACHE_STORE=database

# Redis - enable for production
# SESSION_DRIVER=redis
# CACHE_STORE=redis
# QUEUE_CONNECTION=redis
REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# Mail - SMTP for production
MAIL_MAILER=log
# MAIL_MAILER=smtp
MAIL_SCHEME=null
MAIL_HOST=127.0.0.1
MAIL_PORT=587
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_FROM_ADDRESS="hello@globokids.ru"
MAIL_FROM_NAME="GloboKids"

# ===========================================
# LMS-SPECIFIC CONFIGURATION
# ===========================================

# Telegram Bot (for Telegram Login Widget)
TELEGRAM_BOT_TOKEN=
TELEGRAM_BOT_USERNAME=GloboKidsBot

# YoKassa (Ð®Kassa) Payment Gateway
YOKASSA_SHOP_ID=
YOKASSA_SECRET_KEY=
YOKASSA_WEBHOOK_SECRET=

# CloudPayments (optional)
CLOUDPAYMENTS_PUBLIC_ID=
CLOUDPAYMENTS_SECRET=

# Tinkoff (optional)
TINKOFF_TERMINAL_KEY=
TINKOFF_SECRET_KEY=

# Yandex Disk (for video hosting)
# Get token at https://oauth.yandex.ru/
YANDEX_DISK_TOKEN=
YANDEX_DISK_FOLDER="/LMS Videos"
YANDEX_DISK_CACHE_TTL=3600

# ===========================================
# PRODUCTION SETTINGS (uncomment for production)
# ===========================================
# APP_ENV=production
# APP_DEBUG=false
# APP_URL=https://edu.globokids.ru

# DB_CONNECTION=mysql
# DB_HOST=127.0.0.1
# DB_PORT=3306
# DB_DATABASE=globokids_lms
# DB_USERNAME=globokids
